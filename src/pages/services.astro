---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/instalacion01.avif";
import personWorking from "@images/boiler.avif";
import beforeAfter from "@images/pisoradiante.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Instalaciones",
    subTitle:
      "Contamos con amplia experiencia en instalaciones eléctricas, hidráulicas, sanitarias y sustentables. También ofrecemos servicios de aspiración central, CCTV, riego automatizado y albercas. Nuestro objetivo es maximizar el aprovechamiento de los recursos y fomentar el ahorro de energía.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Calefacción Hidronica ",
    subTitle:
      "Instalamos calefacción hidronica de piso radiante y radiadores de muro que es el sistema de calefacción para el hogar más eficiente y sustentable en el mercado, ya que no genera corrientes de aire ni ruidos siendo sano y confortable.",
    img: beforeAfter,
    imgAlt: "Construction site before and after",
    btnExists: false,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Trabajos de Herreria",
    subTitle:
      "Nuestra área de herrería se dedica a la creación y fabricación de soluciones metálicas duraderas y estéticamente agradables. Ofrecemos una variedad de servicios de herrería",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial view of managed construction",
  },
  {
    isRightSection: false,
    title: "Trabajos de Carpinteria",
    subTitle:
      "Nuestra área de carpintería se especializa en transformar madera de alta calidad en obras maestras funcionales y estéticas. Ofrecemos una amplia gama de servicios de carpintería, desde diseno y fabricacion a la medida, restauracion y reparacion, proyectos comerciales y residenciales.",
    img: usingTools,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title: "Crafting Bespoke Strategies for Unique Challenges",
    subTitle:
      "For our larger enterprise clients, ScrewFast offers custom solutions designed to meet specific industry challenges. By understanding your unique needs, we engineer tailored strategies aimed at optimizing your operations, enhancing efficiency, and driving your business forward.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "In progress building structure",
    imgTwo: underConstruction,
    imgTwoAlt: "Brown and gray building under construction",
    btnExists: false,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "#",
    "url": "#",
    "name": "Arquitectura Fotovoltaica S.A. de C.V.",
    "description": "Uniendo experiencia con su visión, ofrecemos un servicio excepcional y soluciones integrales en la industria de la construcción, desde la consulta hasta la finalización del proyecto.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "#",
        "name": "Arquitectura Fotovoltaica S.A. de C.V.",
        "description": "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Uniendo Experiencia con Visión"
    subTitle="Nos enorgullece ofrecer soluciones integrales y un servicio excepcional en la industria de la construcción. Nuestro equipo experimentado está dedicado a apoyar su proyecto desde el inicio hasta la finalización con una gama de servicios especializados."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  
</MainLayout>
